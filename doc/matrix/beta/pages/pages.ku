# Show the welcome page with the static welcome text


@page welcome-page (session) next version-page;
@widget html 1 1 12 welcome.html to welcome-page;
@category welcome-page-category (bi bi-house-door) to welcome-page;

@page version-page (session) next scenario-page;
@widget version 3 1 12 to version-page;
@category version-page-category (bi bi-file-diff) to version-page;


@page scenario-page (session markable) next pc-knowledge-page;
@widget selection 1 1 12 to scenario-page topic scenario;
@category scenario-page-category (bi bi-controller) to scenario-page;


@page pc-knowledge-page (session markable) next linux-knowledge-page;
@widget selection 1 1 12 to pc-knowledge-page topic pc-knowledge;
@category pc-knowledge-page-category (bi bi-pc-display) to pc-knowledge-page;


@page linux-knowledge-page (session markable) next installation-page;
@widget selection 1 1 12 to linux-knowledge-page topic linux-knowledge;
# TODO: A tux is better here, add icon
@category linux-knowledge-category (bi bi-123) to linux-knowledge-page;


@page installation-page (session markable) next old-hardware-page;
@widget selection 1 1 12 to installation-page topic installation;
@category installation-page-category (bi bi-device-hdd) to installation-page;


# The 64 bit check might be confusing for unexpierienced users, so we hide it.
@page old-hardware-page (session markable) not simplified next help-page;
@widget selection 1 1 12 to old-hardware-page topic old-hardware;
@category old-hardware-page-category (bi bi-calendar-x) to old-hardware-page parent installation-page-category;


@page help-page (session markable) next ux-page;
@widget selection 1 1 12 to help-page topic help;
@category help-page-category (bi bi-question) to help-page;


